#!/bin/bash
CMD='docker ps -a --format "table {{.ID}}	{{.Names}}	{{.Image}}	{{.Status}}	{{.RunningFor}}	{{.Command}}	{{.Ports}}"'

_FZF_PROMPT="$( [ -L $0 ] && basename $(readlink $0) || basename $0) > "

ROW=$(eval "${CMD}" | fzf --info=inline --header-lines=1 --prompt="${_FZF_PROMPT}" --header="${CMD}")

if [[ ! -z ${ROW} ]]; then
  CONTAINER_HASH=$(echo "${ROW}"| awk '{ printf "%s", $1 }')
  echo "${CONTAINER_HASH}"
  exit 0;
else
  exit 1;
fi

