#!/bin/bash

if ! (is_git_hash "$1"); then
  echo "GIT_SEARCH_PR:PR_NOT_FOUND"
  exit 1
fi

SPACE="%20"
#Q="$1"
#Q="type:pr${SPACE}repo:$(git_reponame)"
Q="type:pr${SPACE}repo:$(git_reponame)"
Q="${Q}${SPACE}$1"
AUTHZ_TOKEN=$(git_find_hub_token)
HTTP_HEADER="Authorization: token ${AUTHZ_TOKEN}"
HTTP_URL="https://api.github.com/search/issues?q=${Q}"

API_RES=$(curl -X GET -s -H "${HTTP_HEADER}" "${HTTP_URL}")
echo "${API_RES}"
exit
RES=$(echo "$API_RES"| jq -r ".items[] \
  | [ \
    .number \
    ,.state \
    ,.user.login \
    ,.title \
    ,.body \
    ,.html_url \
    ,.created_at \
    ,.updated_at \
    ,.closed_at \
    ,.merged_at \
  ] | @tsv")

if [[ "${RES}" != "" ]]; then
  # 1 number, 2 state, 3 user.login, 4 title, 5 body, 6 html_url, 7 created_at, 8 updated_at, 9 closed_at, 10 merged_at
  echo "${RES}"
  exit 0
else
  echo "GIT_SEARCH_PR:PR_NOT_FOUND"
  exit 1
fi

