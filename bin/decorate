#!/usr/bin/env zsh

_decorate() { echo $1 | awk -F ',' ' { if ($1!=NULL) { printf "\033[38;5;%dm", $1 }; } { if ($2!=NULL) { printf "\033[48;5;%dm", $2 }; } '; }
_git_config_get() { cfg=$(git config --get "${1}") && echo -n "${cfg// /,}" || "$2"; }

declare -A t=(
[git_hash]=223,
[git_cd]=184
[git_an]=169,
[git_d]=$(_git_config_get color.decorate.HEAD 255)
[git_s]=252
[diff_minus]=117
[diff_plus]=169
[verbose_log]=245,234
[.rb]=170
[.coffee]=130
[.erb]=168
[.js]=117
[.scss]=125
[.slim]=72
[.schema]=229
[.Schemafile]=120
)
if [[ -z $1 ]]; then
  for key in ${(k)t}; do
    fg_bg_csv="${t[${key//-/}]}"
    printf '%s=%s/' ${key} $(_decorate "${fg_bg_csv}")
  done
else
  fg_bg_csv="${t[${1//-/}]}"
  if [[ ! -z "${fg_bg_csv}" ]]; then
    _decorate "${fg_bg_csv}"
  fi
  if [[ ! -z "$2" ]]; then
    printf '%s' "$2"
    printf "\033[0m"
  fi
fi

