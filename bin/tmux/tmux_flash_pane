#!/bin/bash
window_active_style_was=$(tmux show-options -w| grep "window-active-style" 2>/dev/null)
window_active_style_was="${window_active_style_was:-window-active-style bg=colour0}"
forward=$(seq "${1:-52}" "${2:-53}")
reverse=$(seq "${1:-53}" "${2:-52}")
array=( $(echo "${forward}" "${reverse}") )
for i in "${array[@]}"; do
  eval "tmux set window-active-style bg=colour${i}"; sleep 0.03;
done
eval "tmux set ${window_active_style_was}"

