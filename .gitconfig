[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes_global

[color]
  ui = auto

[color "diff"]
  meta = 45 18 bold reverse
  frag = 190 17
  old = 203 53
  oldMoved = 203 53
  #oldMovedAlternative = 203 53
  #oldMovedAlternativeDimmed = 203 53
  new = 47 24
  newMoved = 47 24
  #newMovedAlternative = 47 24
  #newMovedAlternativeDimmed = 47 24
  context = 250
  commit = 246 024
  #func = 7 250

[diff]
  compactionHeuristic = true

[pager]
  # diff-highlight が PATHに追加されてないと、diff-highlightは使えないよ。
  log =  (type diff-highlight >/dev/null 2>&1) && (diff-highlight | less) || less
  show = (type diff-highlight >/dev/null 2>&1) && (diff-highlight | less) || less
  diff = (type diff-highlight >/dev/null 2>&1) && (diff-highlight | less) || less
