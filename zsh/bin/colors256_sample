#!/bin/bash
label() {
  #printf "\e[38;5;$1m\e[48;5;$2mfg%3s bg%3s\e[0m " $1 $2
  printf "\e[38;5;$2m\e[48;5;$1mfg%3s bg%3s\e[0m " $1 $2
}

show_color_sample() {
  echo
  for bg in {0..255}; do
    label $1 $bg
    [[ $(( $((bg + 3)) % 12 )) -eq 0 ]] && echo #&& echo
  done;
  echo
}

fg=${1:-0}
while true; do
  clear
  echo "256色カラーサンプル表示"
  echo "・現在の文字色=[${fg}]"
  echo "・j：文字色を-1します。"
  echo "・k：文字色を+1します。"
  show_color_sample ${fg}
  read -n1 key_input
  [[ "${key_input}" != "j" && "${key_input}" != "k" ]] && break
  [[ ${key_input} == "j" ]] && fg=$(($fg - 1))
  [[ ${key_input} == "k" ]] && fg=$(($fg + 1))
  [[ ${fg} -le 0 ]] && fg=0
  [[ ${fg} -ge 255 ]] && fg=255
done
